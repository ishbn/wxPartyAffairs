/* pages/organization/detailsActivity/detailsActivity.wxss */
@import "../../../utils/wxParse/wxParse.wxss";
.header{
  padding-top: 20rpx;
  width: 100%;
  height: 160rpx;
  display: flex;
  flex-wrap: wrap;
  border-bottom: 2rpx solid rgb(238, 238, 238); 
}

.title{
  padding-left: 20rpx;
  padding-right: 20rpx;
  width: 100%;
}

.time{
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  color: grey;
  font-size: 30rpx;
}

.block{
  display: flex;
  flex-wrap: wrap;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  font-size: 33rpx;
  color: grey;
  border: 1rpx solid #cccccc;
  border-radius: 5px;
  background-color: #ffffff;
  box-shadow: 5px 2px 1px #cccccc;
}

.content{
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 30rpx;
  font-size: 33rpx;
}

.btn{
  padding-top: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 50rpx;
}

/* 模态框的css样式 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}