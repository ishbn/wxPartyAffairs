/* pages/organization/voteList/voteList.wxss */
.title{
  font-size: 45rpx;
  text-align: center;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.content{
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.block{
  border: 2rpx solid whitesmoke;
  box-shadow: 10rpx 2rpx 5rpx #f44236;
  padding: 10rpx 20rpx;
  margin-bottom: 50rpx;
}

.one{
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.votetitle{
  font-size: 40rpx;
  margin-right: 20rpx;
}

.type{
  font-size: 32rpx;
  color: gray;
  border: 2rpx solid whitesmoke;
  padding: 5rpx 5rpx;
  border-radius: 5rpx;
  box-shadow: 1px 1px 2px gray;
}

.time{
  margin-top: 10rpx;
  font-size: 30rpx;
  color: gray;
}