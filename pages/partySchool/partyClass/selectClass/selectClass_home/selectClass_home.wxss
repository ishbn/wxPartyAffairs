.main{
  display: flex;
  flex-wrap: wrap;
}
.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #f7f7f7;
  font-size: 32rpx;
  text-align: center;
  white-space: nowrap;
  position: fixed;
  top: 0rpx;
  left: 0;
  z-index: 0;
}

.tab-item {
  width: 33.3%;
  height: 80rpx;
  display: inline-block;
  z-index: 0;
}

.tab-item.active {
  color: red;
  position: relative;
  z-index: 0;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 100%;
  background: red;
  position: absolute;
  bottom: 0;
  border-radius: 16rpx;
  z-index: 0;
}
.swip{
  margin-top: 80rpx;
  width: 750rpx;
  height: 800rpx;
  z-index: 0;
}
.swiper-item{
  display: flex;
  flex-wrap: wrap;
}
.block{
  width: 33.3%;
  height: 250rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.box{
  width: 220rpx;
  height: 220rpx;
  background: #cf4730;
  color: white;
  text-align: center;
  line-height: 230rpx;
}
