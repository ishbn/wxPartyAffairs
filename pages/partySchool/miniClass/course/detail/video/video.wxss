}
.content{
  width: 700rpx;
  height: auto;
}
.head{
  width: 100%;
  height: 100rpx;
  border-bottom: thin solid darkgray;
}
.title{
  width: 100%;
  height: 50%;
  line-height: 50rpx;
  font-size: 35rpx;
  display: flex;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.time{
  width: 100%;
  height: 50%;
  color: darkgray;
  font-size: 25rpx;
  line-height: 50rpx;
}
.contain{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.video-content{
  width: 650rpx;
  height: 570rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
}
.explain{
  color: darkgray;
  width: 100%;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  font-size: 30rpx;
}
.video{
  width: 600rpx;
  height: 500rpx;
}
.text{
  width: 95%;
  font-size: 30rpx;
  line-height: 60rpx;
  text-indent: 60rpx;
  word-wrap: break-word; 
}
.download-view{
  width: 95%;
  height: 20%;
  display: flex;
  align-items: center;
}
.download{
  width: 8%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.download-img{
  width: 80%;
  height: 80%;
}
.downloadPath{
  width: 92%;
  height: 100%;
  line-height: 50rpx;
  text-align: center;
  font-size: 30rpx;
  color: rgb(56, 56, 252);
  text-decoration:underline;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.footer{
  width: 100%;
  height: 350rpx;
  display: flex;
  flex-direction: column;
}
.inner{
  width: 100%;
  height: 30%;
  display: flex;
  justify-content: center;
}
.collect{
  width: 60rpx;
  height: 60rpx;
}
.pre{
  display: flex;
  font-size: 30rpx;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;

}
.next{
  display: flex;
  font-size: 30rpx;
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}
.footer-title{
  color: rgb(56, 56, 252);
  text-decoration:underline;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.icon{
  width: 100%;
  height: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.col{
  width: 15%;
  height: 50%;
  background: #404040;
  color: white;
  font-size: 25rpx;
  line-height: 35rpx;
  text-align: center;
  border-radius: 5rpx;
}
.percent{
  width: 700rpx;
  height: 150rpx;
  border: thin solid #eeeeee;
  border-radius: 10rpx;
  display: flex;
  flex-wrap: wrap;
  margin: auto 25rpx 25rpx 25rpx;
}
.downloadInfo{
  width: 100%;
  height: 50%;
  display: flex;
}
.download-percent{
  width: 90%;
  height: 50%;
  line-height: 75rpx;
  font-size: 35rpx;
}
.download-size{
  width: 10%;
  height: 50%;
  line-height: 75rpx;
  font-size: 30rpx;
  color: darkgray;
}
.progress{
  width: 100%;
  height: 50%;
}


.video-box{
  height: 35vh;
  position: relative;
}
.video-box video{
  display: block;
  width: 100%;
  height: 35vh;
}
