.main{
  display: flex;
  flex-wrap: wrap;
}
.searchBox {
  width: 750rpx;
  height: 100rpx;
  display: flex;
  background: #f5f5f5;
}
.content {
  width: 80%;
  height: 60%;
  display: flex;
  position: relative;
  bottom: -20%;
  background: #fff;
  border-radius: 10rpx;
}
.menu {
  width: 14.5%;
  height: 100%;
  display: inline-block;
}

.menu-image {
  position: relative;
  left: 25%;
  top: 25%;
  width: 50%;
  height: 55%;
}
.img {
  position: relative;
  left: 2%;
  top: 20%;
  width:9%;
  height:60%;
}

.ipt {
  font-size: 30rpx;
  position: relative;
  left:1%;
  width: 95%;
  height: 100%;
}
.clear{
  position: relative;
  right: 2%;
  top: 28%;
}
@keyframes display_show{
  from {
    height: 0rpx;
  }

  to {
    height: 200rpx;
  }
}
@keyframes display_none{
  from {
    height: 200rpx;
  }

  to {
    height: 0rpx;
  }
}
.display_show{
  animation: display_show 1s;
}
.display_none{
  animation: display_none 1s;
}
.show{
  background: white;
  display: flex;
  flex-wrap: wrap;
  border: 1px solid;
  border-color: beige;
  position: absolute;
  top: 100rpx;
  z-index: 3;
}
.hide{
  display: none;
}
#box{
  width: 100%;
  border-top: 1px solid #ddd;
  overflow: hidden;
  height: 0;
  animation-fill-mode: forwards;
}
.label{
  width: 150rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  border: thin solid darkgray;
  color: rgb(77, 72, 72);
  margin: 20rpx 15rpx;
}
.shadow{
  width: 750rpx;
  background: rgba(1, 1, 1, 0.2);
  position: fixed;
  top: 100rpx;
  z-index: 2;
}
.under{
  width: 750rpx;
}
.inner{
  width: 750rpx;
  background: #EDECE8;
  display: flex;
  flex-wrap: wrap;
  z-index: 0;
}
.view{
  width: 350rpx;
  height: 350rpx;
  background: white;
  margin-top: 20rpx;
  margin-left: 17rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  z-index: 0;
}
.image{
  padding-top: 20rpx;
  padding-left: 25rpx;
  width: 320rpx;
  height: 220rpx;
  z-index: 0;
}
.info{
  width: 320rpx;
  height: 65rpx;
  line-height: 40rpx;
  overflow: hidden;
  word-wrap: break-word;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  text-overflow: ellipsis;
  font-size: 30rpx;
}
.time{
  width: 320rpx;
  height: 40rpx;
  font-size: 30rpx;
  color: darkgray;
  z-index: 0;
}
.more{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  background: #EDECE8;
  color: darkgray;
  text-align: center;
  z-index: 0; 
}
/* 记录为空时 */
.null{
  width: 750rpx;
  height: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.null-img{
  width: 120rpx;
  height: 110rpx;
}
.null-text{
  font-size: 30rpx;
  color: #e6e6e6;
}