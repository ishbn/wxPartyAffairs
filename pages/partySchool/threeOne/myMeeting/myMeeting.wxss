.main{
  display: flex;
  flex-wrap: wrap;
}
.searchBox {
  width: 750rpx;
  height: 100rpx;
  display: flex;
  position: absolute;
  top: 0rpx;
  background: #f5f5f5;
}

.content {
  width: auto;
  height: 60%;
  display: flex;
  position: relative;
  bottom: -20%;
  background: #fff;
  border-radius: 10rpx;
}
.menu {
  width: 14.5%;
  height: 100%;
  display: inline-block;
}

.menu-image {
  position: relative;
  left: 25%;
  top: 25%;
  width: 50%;
  height: 55%;
}
.img {
  position: relative;
  left: 30%;
  top: 20%;
  width:9%;
  height:60%;
}
.ipt {
  font-size: 30rpx;
  position: relative;
  left:30%;
  width: 600rpx;
  height: 100%;
}
.clear-view{
  width: 60rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
}
.change-img{
  position: relative;
  left: 2%;
  top: 20%;
  width:9%;
  height:60%;
}
.change-ipt{
  font-size: 30rpx;
  position: relative;
  left:1%;
  width: 500rpx;
  height: 100%;
}
.change-cancel{
  font-size: 30rpx;
  width: 12%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: red;
}
@keyframes display_show{
  from {
    transform: translateY(0rpx);
  }

  to {
    transform: translateY(100rpx);
  }
}
.display_show{
  background: white;
  float: left;
  animation: display_show 0.3s ease-in both;
  border: 1px solid;
  border-color: beige;
  position: fixed;
  z-index: 3;
}
.btn{
  margin-left: 30rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  color:  #404040;
}
.display_none{
  display: none;
}
.shadow{
  width: 750rpx;
  height: 1100rpx;
  background: rgba(1, 1, 1, 0.2);
  position: absolute;
  top: 100rpx;
  z-index: 2;
}
.head{
  margin-top: 100rpx;
  width: 750rpx;
  height: 85rpx;
  display: flex;
  justify-content:center;
  align-items: center;
  border-bottom: thin solid darkgray;  
  background: white;
}
.option{
  width: 90%;
  height: 60%;
  background: white;
  display: flex;
}
.option-item{
  color:#dc5739;
  border: 1rpx solid #dc5739;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  width: 50%;
  height: 100%;
}
.option-item.active{
  background: #dc5739;
  color: white;
}
.all{
  width: 750rpx;
  height: 750rpx;
}
.meetings{
  width: 750rpx;
  height: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.oneMeeting{
  width: 95%;
  height: 120rpx;
  display: flex;
  background: white;
  flex-direction: column;
  border-bottom: thin solid rgb(218, 216, 216)
}
.meeting-title{
  width: 100%;
  height: 60%;
  display: flex;
  align-items: center;
}
.meetingTitle-text{
  width: 90%;
  height: 100%;
  line-height: 72rpx;
  font-size: 35rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.meetingTitle-img{
  width: 40rpx;
  height: 40rpx;
}
.meeting-content{
  width: 100%;
  height: 40%;
  display: flex;
  align-items: center;
}
.meeting-desc{
  width: 65%;
  height: 100%;
  font-size: 25rpx;
  color: darkgray;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 48rpx;
}
.meeting-date{
  width: 35%;
  height: 100%;
  font-size: 25rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: blue;
}
.did{
  width: 750rpx;
  height: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.null-img{
  width: 120rpx;
  height: 110rpx;
}
.null-text{
  font-size: 30rpx;
  color: #e6e6e6;
}