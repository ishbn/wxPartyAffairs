/* pages/wode/feedback/feedback_home/feedback_home.wxss */

.page {  
  margin-left: 10rpx;  
  margin-right: 10rpx;  
}

.swiper-tab {  
  height: 100rpx;
  display: flex;  
  flex-direction: row;  
  line-height: 80rpx;  
  border-bottom: 2rpx solid #87CEFA;  
}  
  
.tab-item {  
  width: 50%;  
  text-align: center;  
  font-size: 15px;  
  color: #777;  
}  
  
.on {  
  color: #00E5EE;  
  border-bottom: 5rpx solid #00E5EE;  
} 

/* 反馈表单的样式 */

 
.feedback_type,.title{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  margin: 20rpx 0;
  border-bottom: 2rpx solid rgb(238, 238, 238); 
  font-size: 36rpx;
}
picker{
  width: 100%;
  display: inline-block;
  text-align:right;
  /* background: #eee; */
}
.title input{
  width: 100%;
  margin: 0 10rpx;
}

.content{
  width: 100%;
  margin: 20rpx 0;
}
.feedback_type text,.title text,.content text{
  width: 120rpx;
  color:#bfbfbf; 
  margin: 0 10rpx; 
}

.content textarea{
  width: 95%;
  margin: 10rpx auto;
  font-size: 36rpx;
  border-bottom: 2rpx solid rgb(238, 238, 238); 
  overflow-y:visible ;
  min-height: 500rpx;
}
.btn{
  width: 80%;
  margin: 20rpx auto;
  text-align: center;
} 
.btn button{
  display: flex;
  height: 80rpx;  
  align-items: center;
  justify-content: center;
  font-size: 38rpx;
} 

/* 列表部分的样式 */

.feedback_list_item{
  margin: 10rpx 10rpx;
}


.list_item{
    display: block;
    padding: 15px 15px 10px 10px;
    overflow: hidden;
    cursor: default;
    text-decoration: none;
    -webkit-tap-highlight-color: transparent;
    border-bottom:2rpx solid rgb(238, 238, 238);
}


.list_item_title{
  width: 100%;
  height: 60%; 
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  font-size: 35rpx;


    overflow: hidden;
    -ms-text-overflow: ellipsis;
    text-overflow: ellipsis; 
    display: -webkit-box;
    -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
    -webkit-line-clamp: 2; /** 显示的行数 **/
}

.list_item_text{
  overflow: hidden;
  display: flex;
}

.list_item_type{
     font-weight: normal;
    font-size: 32rpx;
    color: #f44236;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-wrap: normal;
    margin-top:20rpx; 
}
.list_item_date{
  font-size: 13px;
  color: #999;
  margin: 20rpx 20rpx;
  display: flex;
  align-items:left;
}
.tail{
  font-size: 24rpx;
  color: grey;
  text-align: center;
  padding-top: 10rpx;
  padding-bottom: 10rpx; 
  border-bottom: 2rpx solid rgb(238, 238, 238);
}
