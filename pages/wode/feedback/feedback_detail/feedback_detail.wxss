/* pages/wode/feedback/mysubmit/mysubmit.wxss */
@import "/utils/wxParse/wxParse.wxss";

.page__detail{
    display: block;
    width: 100%;
    margin:0 auto;
    background-color: #fff;
    margin-top:0.4rem;
    
}
.detail{
  margin:0 10rpx;
}

.detail__title{
     font-size:42rpx;
    /* line-height: 50rpx; */
    font-weight: 400;
    word-break:break-word;
    width: 100%;
    text-align: left;
}


.article__desc{
  display: flex;
  justify-content: flex-start;
  margin: 30rpx 0;
  padding-bottom: 18rpx;
  border-bottom: 1rpx solid #ccc;
}



.article__type{
  display: flex;
  justify-content: center;
  color:#d81e06;
  border:1rpx solid #d81e06;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  font-size:20rpx;
  margin-right: 20rpx;
}
.article__time{
  display: flex;
  justify-content: center;
  align-content: center;
  /* padding: 4rpx 10rpx; */
  font-size:28rpx;
  margin-right: 10rpx;
}


.article__content{
    font-size: 16px;
    color: #333;
    word-break:break-all;
    /* text-indent: 2em; */
    margin: 0;
    padding:0 10rpx;
}

.wxParse-img{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
   
}



.tail{
  margin-top: 100rpx;
}