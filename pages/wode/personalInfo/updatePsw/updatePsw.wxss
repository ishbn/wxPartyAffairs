/* pages/wode/personalInfo/updatePsw/updatePsw.wxss */

page {
  background-color: #eee;
  font-size: 28rpx;
}

.header{
  width: 100%;
  height: 420rpx;
  margin-bottom:60rpx; 
}
.header image{
  width: 100%;
  height: 100%;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

.top {
  width: 100%;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 5rp 5rp #e9e9e9;
}

.one_list {
  padding: 0 20rpx;
  box-sizing: border-box;
  height: 100rpx;
  /* line-height: 90rpx; */
  display: flex;
  align-items: center;
  justify-content: space-between
}

input {
  width: 480rpx;
}

.x_line {
  width: 100%;
  height: 1px;
  background-color: #eee;
}

.change{
  width: 100%;
  display: flex;
  align-items: center;
}


.btn {
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  margin-top: 40rpx;
  background: linear-gradient(to right, #f51a6e, #f44236);
  border-radius: 15rpx;
  box-shadow: 0 5rpx 5rpx #f44236;
  font-size:36rpx;
}