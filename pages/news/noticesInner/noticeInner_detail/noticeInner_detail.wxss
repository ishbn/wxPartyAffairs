/* pages/news/noticesInner/noticeInner_detail/noticeInner_detail.wxss */
@import "/utils/wxParse/wxParse.wxss";

.page__detail{
    display: block;
    width: 100%;
    margin:0 auto;
    background-color: #fff;
    margin-top:0.4rem;
}
.detail{
  margin:0 10rpx;
}

.detail__title{
    font-size:42rpx;
    /* line-height: 50rpx; */
    font-weight: 400;
    word-break:break-word;
    width: 100%;
    text-align: left;
}


.article__desc{
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
  padding-bottom: 18rpx;
  border-bottom: 1rpx solid #ccc;
}


.article__time{
  display: flex;
  justify-content: center;
  align-content: center;
  /* padding: 4rpx 10rpx; */
  font-size:28rpx;
  margin-right: 10rpx;
}

.article__count{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.article__count image{
  width: 42rpx;
  height: 42rpx;
  margin:0 5rpx;
}
.article__count text{
  margin:0 5rpx;
  color:#333;
  font-size: 20rpx;
}

.article__content{
  font-size: 16px;
  color: #333;
  word-break: break-all;
  text-indent: 2em;
  margin: 0;
  padding: 10rpx;
}

.wxParse-img{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}


.tail{
  margin-top: 100rpx;
}