/* pages/news/notices/notices_list/notices_list.wxss */
.main {
  height: 35%;
  width: 100%;
  border-bottom: 10px solid #EDECE8;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  
}
 /* navigator{
  width: 100%;
  height: 100%;
}  */
.head{
  width: 100%;
  height:100rpx;
  color:white;
  text-align:center;
  line-height: 100rpx;
  background: -webkit-linear-gradient(top, #f44236 , #ff8f5b);
}
swiper{
  width: 100%;
  height: 400rpx;
  background: -webkit-linear-gradient(top, #ff8f5b , white);
}
.swiper-item{
  padding-top: 25rpx;
}
.swiper-item image{
  width: 600rpx;
  height: 300rpx;
  /* position: absolute; */
}
.swiper-item image.active{
  transform: scale(1.2);
  transition:all .2s ease-in 0s;
}
.swp-info{
  width: 80%;
  height: 85rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.swp-title {
  width: 100%;
  /* height: 40%; */
  line-height: 60rpx;
  font-weight: bold;
  text-align: center;
  font-size: 35rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;

  /* display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center; */
}



.notices_item{
  width: 100%;
  height: 160rpx;
  border-bottom: 2rpx solid rgb(238, 238, 238);
  display: inline-flex;
}
.notices_date{
  text-align: center;
  width: 110rpx;
  height: 100%;
  border-right:1rpx solid rgb(238, 238, 238); 
}
.notices_month{
  width: 100%;
  height: 40%;
  display: flex;
  align-items: center;
  color: #777;
  justify-content: center;
}
.notices_day{
  width: 100%;
  height: 40%;
  font-size: 58rpx;
  color: #00E5EE;
  display: flex;
  align-items: center;
  justify-content: center;
}
.notices_title{
  width: 100%;
  font-size: 32rpx;
  overflow: hidden;
  margin: 10rpx 10rpx 10rpx 10rpx;
  display: flex;
  align-items: center;

}

.list_item{
    display: block;
    padding: 15px 15px 10px 10px;
    overflow: hidden;
    position: relative;
    cursor: default;
    text-decoration: none;
    -webkit-tap-highlight-color: transparent;
    border-bottom:2rpx solid rgb(238, 238, 238);
}

.list_item_images{
    float: left;
    margin-right: 10px;
}
.list_item_images image{
    display: block;
    width: 80px;
    height: 60px;
}

.list_item_text{
  overflow: hidden;
}

.list_item_text-title{
    width: 100%;
    height: 100rpx;
    font-weight: normal;
    font-size: 34rpx;
    color: #000; 

    overflow: hidden;
    -ms-text-overflow: ellipsis;
    text-overflow: ellipsis; 
    display: -webkit-box;
    -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
    -webkit-line-clamp: 2; /** 显示的行数 **/

}

.list_item_text-date{
  font-size: 13px;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-height: 1.3;
  max-height: 36px\9;
}