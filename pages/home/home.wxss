/* pages/home/home.wxss */
.index{
    background-color: #FBF9FE;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
    flex: 1;
    min-height: 100%;
    font-size: 32rpx;
}
.swiper {
  height: 420rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.item{
  display: flex;
  flex-wrap:wrap;
  justify-content: center;
}
.item image{
  width: 100%;
  height: 100%;
}
.item_index{
  width: 38rpx;
  height: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  top: -42rpx;
  right:-332rpx;
}
.text_index{
  font-size: 32rpx;
  color: white;
  /* color: black; */
}
.text_length{
  font-size: 20rpx;
  color: white;
   /* color: black; */
}
.menu-wrp {
  width:100%;
  margin-top:20rpx;
}
.menu-wrp:after{
    content:"";
    display:block;
    clear:both;
}
.menu-list{
    float:left;
    width:20%;
    box-sizing: border-box;
    padding-bottom:10px;
}

.menu-img{
    /*width:120rpx;
    height:84rpx;*/
    width:32px;
    height:32px;
    display:block;
    margin:0 auto;
    margin-bottom:5px;

}
.menu-desc{
    /* background-color:#ffffff; */
    color:#333333;
    width:100%;
    text-align: center;
    display:block;
    font-size:12px;
}
.gap-1{
    width:100%;
    height:15rpx;
    background:rgb(238, 238, 238);
}
.selection{
  width: 100%;
}

.header{
  border-left-width: 3px;
  border-left-style: solid;
  border-left-color: #ff4239;
  display:flex;
  justify-content: space-between;
  align-items: center;
  height:60rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top:10rpx;
  margin-bottom: 10rpx;
}

.text-all{
  color: grey;
  /* font-size: 15px; */

}

.text-all::after{
    content: " >";
    /* color: blue; */
}
.content{
  max-height: 425px;
  overflow-y: auto;
  border-bottom:2rpx solid rgb(238, 238, 238); 

}

.list_item{
    display: block;
    padding: 15px 15px 10px 10px;
    overflow: hidden;
    position: relative;
    cursor: default;
    text-decoration: none;
    -webkit-tap-highlight-color: transparent;
}

.list_item_images{
    float: left;
    margin-right: 10px;
}
.list_item_images image{
    display: block;
    width: 80px;
    height: 60px;
}

.list_item_text{
  overflow: hidden;
}

.list_item_text-title{

     width: 100%;
    height: 100rpx;
    font-weight: normal;
    font-size: 34rpx;
    color: #000; 

    overflow: hidden;
    -ms-text-overflow: ellipsis;
    text-overflow: ellipsis; 
    display: -webkit-box;
    -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
    -webkit-line-clamp: 2; /** 显示的行数 **/
}

.list_item_text-date{
   font-size: 13px;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  line-height: 1.3;
  max-height: 36px\9; 
}
