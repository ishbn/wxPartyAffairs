/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 




/** global weui article **/

.articles{
  background-color: #fff;
}
.article__item{
  display: flex;
  padding: 30rpx;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  position: relative;
  padding-bottom: 40rpx;
}
.article__thumb{
  width:4.2rem;
  height: 3rem;
  margin-right: 0.6rem;
}
.article__image{
  width:4.2rem;
  height: 3rem;
}
.article__info{
  flex: 1;
  width: 100%;
  overflow: hidden;
}
.article__title{
  font-weight: 400;
  font-size: 26rpx;
  text-overflow: ellipsis;
  white-space:nowrap;
  display: block;
  width: 100%;
  margin-bottom: 20rpx;
}


.article__desc{
  color: #999;
  font-size: 24rpx;
  line-height: 1.2;
  width: 100%;
}

.article__item__cover{
  display: block;
}
.article__cover{
  padding-bottom: 10rpx;
  overflow: hidden;
}
.article__ad{
  width: 100%;
  height: 4rem;
  border-radius: 10rpx;
}

.article__remark{
  bottom: 0;
  width: 20rem;
  display: block;
  font-size: 28rpx;
}

.article__source{
  color:#d81e06;
  border:1rpx solid #d81e06;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  font-size:20rpx;
  margin-right: 20rpx;
}


.article__time{
  margin-right: 10rpx;
}
.article__count{
  float: right;
  display: flex;
  align-items: center;
  color:#333;
  font-size: 20rpx;
  font-weight: 500;
}

.article__icon{
  width: 29rpx;
  height: 29rpx;
  margin-left: 15rpx;
  margin-right: 6rpx;
}

.article__imgview{
  width: 200rpx;
  height: 142rpx;
  padding: 15rpx;
}

.tail{
  font-size: 24rpx;
  color: grey;
  text-align: center;
  padding-top: 10rpx;
  padding-bottom: 10rpx; 
  border-bottom: 2rpx solid rgb(238, 238, 238);
}


/* 红点提示新消息 */
.red-point{
  position: relative;
}
.red-point::before{
  content: " ";
  border: 3px solid red;/*设置红色*/
  border-radius:3px;/*设置圆角*/
  position: absolute;
  z-index: 1000;
  right: 0%;
  margin-right: -5px;
  margin-top: -5px;
}